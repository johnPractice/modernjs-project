{
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "settings": {
    "react": {
      "version": "latest"
    }
  },
  "globals": {
    "export": true,
    "define": false
  },
  "rules": {
    "semi": ["warn", "always"],
    "quotes": ["warn", "single"],
    "no-debugger": "error",
    "no-console": "error"
  }
}
